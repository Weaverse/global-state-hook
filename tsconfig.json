{
	"include": ["src"],
	"exclude": ["test", "example"],
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true
	}
}
